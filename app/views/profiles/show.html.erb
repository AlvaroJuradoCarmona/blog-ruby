<%= stylesheet_link_tag "profile.css", "data-turbo-track": "reload" %>

<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @profile %>

    <%= button_tag 'Edit profile', type: "button", class: "text-center rounded-lg py-3 px-5 bg-purple-500 text-white inline-block font-medium",
    data: { reflex: "click->Profile#show_edit_profile", profile_id: @profile.id} %>
  </div>
</div>

<div id="edit_profile"></div>
